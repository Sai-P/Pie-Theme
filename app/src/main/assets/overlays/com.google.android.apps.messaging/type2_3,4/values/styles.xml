<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IAPTheme" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AppBaseTheme" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/primary_material_dark</item>
    </style>

    <style name="ConversationMessage">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="ConversationMessageTimestamp">
        <item name="android:background">@*android:color/transparent</item>
    </style>
    <style name="ConversationMessageStatus">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*android:color/transparent</item>
    </style>
    <style name="ConversationMessageInfo">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*android:color/transparent</item>
    </style>
    <style name="BugleTheme.ConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme.BigTitle">
        <item name="android:windowBackground">@*android:color/primary_material_dark</item>
    </style>
    <style name="BugleTheme.ArchivedConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleToolbarTheme">
        <item name="android:windowBackground">@*android:color/primary_material_dark</item>
        <item name="*com.google.android.apps.messaging:colorPrimary">@*com.google.android.apps.messaging:color/archived_conversation_action_bar_background_color</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@*com.google.android.apps.messaging:color/archived_conversation_action_bar_background_color_dark</item>
    </style>


    <style name="BugleThemeGreyBackground" parent="@*com.google.android.apps.messaging:style/BugleTheme">
        <item name="android:background">@*android:color/primary_material_dark</item>
    </style>
    <style name="BugleThemeWhiteBackground" parent="@*com.google.android.apps.messaging:style/BugleTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@*android:color/primary_material_dark</item>
    </style>


    <style name="RecipientEditTextViewBase">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@*com.google.android.apps.messaging:dimen/chip_height</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>



    <style name="BugleTheme.DialogActivity" parent="@*com.google.android.apps.messaging:style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="C2oCustomizationHandleTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
    </style>
</resources>
