        <item name="android:panelColorBackground">@*android:color/primary_material_light</item>
        <item name="android:colorAccent">@*android:color/material_deep_teal_500</item>
	</style>

    <!--Settings App-->
	<style name="Theme.DeviceDefault.Settings" parent="@*android:style/Theme.Material.Settings">
        <item name="android:colorAccent">@*android:color/material_deep_teal_500</item>    <!--OG:@color/accent_device_default_light-->
        <item name="android:navigationBarColor">@*android:color/white</item>>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@*android:color/transparent</item>
		<!--Self-defined-->
        <item name="android:colorControlNormal">@*android:color/material_deep_teal_500</item>
        <item name="android:listDivider">@*android:color/transparent</item>
    </style>

